                                            <th>처리일시</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    	<c:forEach var="coDTO" items="${list}" varStatus="stat">
                                        <tr>
                                            <td>${coDTO.coNum}</td>
                                            <td>${coDTO.coTarget}</td>
                                            <td>${coDTO.userid}</td>
                                            <td>${coDTO.createDate}</td>
                                            <td>${coDTO.endDate}</td>
                                            <td>
												<a class="btn btn-primary" href="/admin/complaintHandlingDetail?coNum=${coDTO.coNum}">내용보기</a>
											</td>
